<!-- Single Comment -->
<div class="media mb-2">
  <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
  <div class="media-body">
    <h5 class="mt-0"><%= comment.user.full_name || comment.user.first_name %></h5>
    <div class="media-body-comment">
        <div class="media-body-comment-text">
           <%= comment.content %>
        </div>
        <% if comment.likes.count > 0%>
            <div class="comment-quantity-like" >
                  <i class="fas fa-thumbs-up"></i> <%= comment.likes.count %>
            </div>
        <% end %>
      
    </div>
    <div class="media-footer d-flex">
        <div class="media-like mr-4">
          <a href="" class="btn-like">Like</a>
        </div>
        <button class="btn-reply">Reply</button>
    </div>

    <div class="comment-childrent">
      <% @comments.each do |comment_children|%>
          <%= render partial: 'comment_children', locals: {comment: comment_children} %>
      <% end %>
    </div>

    <div class="comment-children-form mb-2" id="">
        <form>
            <input type="text" class="form-control" placeholder="Write a reply...">
           <input type="submit" style="position: absolute; left: -9999px"/>
        </form>
    </div>

  </div>
</div>