<%= form_for @gossip do |f| %>
  <div class="form-group">
    <ul class="p-0 m-0 text-danger">
      <li class="nav-link p-0 m-0">* <small>Title length must be between 3 and 14 characters</small></li>
      <li class="nav-link p-0 m-0">* <small>Content must be not empty</small></li>
    </ul>
  </div>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, required: true, class: 'form-control', placeholder: '* Enter title' %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, required: true, class: 'form-control', rows: '5', placeholder: '* Enter description' %>
  </div>
  <%= hidden_field_tag "gossip[user_id]", @user_id %>

  <div class="mt-3 d-flex">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to 'Back To Gossips Page', gossips_path, class: 'btn btn-dark ml-auto' %>
  </div>
<% end %>