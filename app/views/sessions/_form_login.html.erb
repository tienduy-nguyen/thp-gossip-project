 <%= form_with(scope: :session, url: login_path, local: true) do |f|%>
 <div class='input-group mb-4'>
   <div class='input-group-prepend'>
     <span class='input-group-text'>
       <i class='far fa-envelope'></i>
     </span>
   </div>
   <%= f.email_field :email, class: 'form-control', autofocus: true, placeholder: 'Email', required: true %>
 </div>

 <div class='input-group mb-4'>
   <div class='input-group-prepend'>
     <span class='input-group-text'>
       <i class='fas fa-key'></i>
     </span>
   </div>
   <%= f.password_field :password, class:'form-control', 
              autocomplete: false, placeholder: 'Password', 
              required: true, minlength: 6%>
 </div>
 <%= f.submit 'LOGIN', class:'btn btn-primary form-control' %>

 <% end %>