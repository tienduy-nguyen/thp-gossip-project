 <%= form_with(scope: :user, url: signup_path, local: true) do |f|%>
 <div class="form-row  mb-4">
    <div class="col">
      <%= f.text_field :first_name, class: 'form-control rounded-pill', placeholder: 'First name'%>
    </div>
    <div class="col">
      <%= f.text_field :first_name, class: 'form-control rounded-pill', placeholder: 'Last name'%>
    </div>
  </div>
<div class='form-group  mb-4'>
   <%= f.text_field :username, class: 'form-control rounded-pill', autofocus: true, placeholder: 'User name' %>
 </div>

 <div class='form-group mb-4'>
   <%= f.email_field :email, class: 'form-control rounded-pill', autofocus: true, placeholder: 'Email', required: true %>
 </div>

 <div class="form-row  mb-4">
    <div class="col ">
      <%= f.password_field :password, class:'form-control rounded-pill', 
              autocomplete: false, placeholder: 'Password', 
              required: true, minlength: 6 %>
    </div>
    <div class="col ">
      <%= f.password_field :password_confirmation, class:'form-control rounded-pill', 
              autocomplete: false, placeholder: 'Repeat Password', 
              required: true, minlength: 6 %>
    </div>
  </div>

 <div class="form-check ml-1 mb-4">
    <%= check_box_tag :remember_me, 1, params[:remember_me], class: 'form-check-input'%>
    <label class="form-check-label" for="exampleCheck1">Remember me</label>
  </div>
 <%= f.submit 'SIGNUP', class:'btn btn-primary form-control rounded-pill' %>

 <% end %>