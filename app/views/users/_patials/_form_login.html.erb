<!-- Form -->
        <%= form_for @user do |f| %>
          <div class="input-group mb-3">
            <div class="input-group-append">
              <span class="input-group-text"><i class="fas fa-user"></i></span>
            </div>
            <%= f.email_field :email, autofocus: true, required: true, class: "form-control", placeholder: 'Email address' %>
          </div>
          <div class="input-group mb-3" id="show_hide_password">
            <div class="input-group-append">
              <span class="input-group-text"><i class="fas fa-key"></i></span>
            </div>
            <%= f.password_field :password, autocomplete: 'off', required: true, class: 'form-control', id: 'password', name: 'password', data:{ toggle: 'password'}, placeholder: 'Password' %>
            <div class="input-group-append">
              <span class='input-group-text' id="show-pass-icon"
                style="background-color: #fff;color:#333;cursor:pointer"><i class="fa fa-eye-slash" aria-hidden="true"
                  onclick="showPass()"></i></span>
            </div>
          </div>

          <div class="d-flex justify-content-center mt-4 login_container">
             <%= f.submit class: 'btn login_btn', value: "Login" %>
          </div>
      <% end %>

<!-- End Form -->
