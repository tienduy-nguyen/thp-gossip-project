<!-- Form -->
        <%= form_for @user do |f| %>
          <div class="input-group mb-3">
            <div class="input-group-append">
              <span class="input-group-text"><i class="fas fa-envelope-square"></i></span>
            </div>
             <%= f.email_field :email,autofocus: true,  required: true, class: "form-control", placeholder: 'Email address' %>
          </div>
          <div class="input-group mb-3">
            <div class="input-group-append">
              <span class="input-group-text"><i class="fas fa-key"></i></span>
            </div>
            <%= f.password_field :password, autocomplete: 'off', required: true, class: 'form-control', id: 'password', data:{ toggle: 'password'}, placeholder: 'Password' %>
          </div>
          <div class="input-group mb-3">
            <div class="input-group-append">
              <span class="input-group-text"><i class="fas fa-key"></i></span>
            </div>
            <%= f.password_field :password_confirmation, autocomplete: 'off', required: true, class: 'form-control', id: 'password', placeholder: 'Confirm Password' %>
          </div>

          <div class="d-flex justify-content-center mt-4 login_container">
            <input class="btn login_btn" type="submit" value="Register Account">
          </div>
        <% end %>
<!-- End form -->