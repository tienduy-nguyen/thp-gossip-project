
<%= form_with(scope: :user, url: edit_user_path, method: :patch, local:true) do |f| %>
    <div class="form-group">
        <%= f.label :city_id %>
       <%= select_tag(:city_id, options_for_select(@cities.collect{ |u| [u.name, u.id] }), 
       class: "form-control text-success") %>
  </div>
  <div class="form-group">
      <%= f.label :username %>
      <%= f.text_field :username, required: true, class: 'form-control text-success',placeholder: 'First name' %>
  </div>
  <div class="form-group">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, required: true, class: 'form-control text-success',placeholder: 'First name' %>
  </div>
  <div class="form-group">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, class: 'form-control text-success',placeholder: 'Last name' %>
  </div>
 <div class="form-group">
    <%= f.label :age %>
    <%= f.number_field :age, class: 'form-control text-success',placeholder: 'Age' %>
  </div>
  
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, required: true, class: 'form-control text-success', rows: '10', placeholder: 'Description' %>
  </div>

  <div class="mt-3 d-flex">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to 'Back To Users Page', users_path, class: 'btn btn-dark ml-auto' %>
  </div>
<% end %>